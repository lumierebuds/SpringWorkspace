	<script>
		$("#select1").click(function(){
			var $in1 = $("#in1");
			var $result = $("#result");
			
			$.ajax({
				url : "${contextPath}/member/selectOne",
				type: "post",
				data: {
					userId : $in1.val()
				}, 
				success : function(result){
					// js 객체 형태로 응답받을 예정 {key : value, key : value...}
					console.log(result);
					// console.log(JSON.parse(result));
					// console.log(JSON.stringify(new Object()));
					
				},
				error : function(xhr){
					console.log(xhr)
				}
			})
			
		})
		
		</script>	
		
